{
  "version": 2,
  "functions": {
    "api/[...all].js": {
      "includeFiles": ["server/**"]
    }
  },
  "routes": [
    { "src": "/(sitemap\\.xml|robots\\.txt|reply|gallery-file/.*|gallery-opt/.*)", "dest": "/api/[...all]" },
    { "src": "/api/(.*)", "dest": "/api/[...all]" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
